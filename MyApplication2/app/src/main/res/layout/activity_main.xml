<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    context="com.example.gx620.myapplication.MainActivity"
    layout_editor_absoluteY="81dp"
    layout_editor_absoluteX="0dp"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout_constraintTop_creator="1"
        layout_constraintRight_creator="1"
        layout_constraintBottom_creator="1"
        layout_constraintLeft_creator="1"
        layout_editor_absoluteY="0dp"
        layout_editor_absoluteX="0dp"
        android:id="@+id/textView"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="show a Toast msg using event handling"
        android:id="@+id/btn1Show"
        android:onClick="showToast"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"


        tools:layout_editor_absoluteY="293dp"
        tools:layout_editor_absoluteX="29dp"
        layout_constraintBottom_creator="1"
        android:layout_marginStart="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        layout_constraintLeft_creator="1"
        android:layout_marginBottom="170dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="29dp" />
    <Button
        android:text="show a Toast msg using listener"
        android:id="@+id/btn2Show"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"


        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="373dp"
        layout_constraintTop_creator="1"
        android:layout_marginStart="27dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/btn1Show"
        layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btn1Show"
        android:layout_marginLeft="27dp" />
</android.support.constraint.ConstraintLayout>
