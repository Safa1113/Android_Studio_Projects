<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.safofoh.myapplicationlab5.Main2Activity">


<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnAdd"
    android:text="add"
    tools:layout_constraintTop_creator="1"
    android:layout_marginTop="30dp"
    app:layout_constraintTop_toBottomOf="@+id/textView"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="@+id/textView" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnSub"
    android:text="sub"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintBottom_toTopOf="@+id/btnClear"
    android:layout_marginStart="69dp"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginBottom="29dp"
    app:layout_constraintLeft_toLeftOf="@+id/btnClear"
    android:layout_marginLeft="69dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnMul"
    android:text="mul"
    tools:layout_constraintTop_creator="1"
    android:layout_marginTop="29dp"
    app:layout_constraintTop_toBottomOf="@+id/btnAdd"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="@+id/btnAdd" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnDiv"
    android:text="div"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintBottom_toTopOf="@+id/btnSub"
    app:layout_constraintRight_toRightOf="@+id/btnSub"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginBottom="29dp"
    app:layout_constraintLeft_toLeftOf="@+id/btnSub" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnClear"
    android:text="clear"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginBottom="56dp"
    app:layout_constraintLeft_toLeftOf="parent" />

<EditText
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:id="@+id/editText"

    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    app:layout_constraintRight_toRightOf="@+id/editText2"
    android:layout_marginTop="43dp"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="@+id/editText2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.0" />

<EditText
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:id="@+id/editText2"

    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintBottom_toTopOf="@+id/textView"
    app:layout_constraintRight_toRightOf="@+id/textView"
    android:layout_marginTop="44dp"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginBottom="51dp"
    app:layout_constraintLeft_toLeftOf="@+id/textView"
    app:layout_constraintTop_toTopOf="@+id/editText"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintVertical_bias="1.0" />

<TextView
    android:layout_width="222dp"
    android:layout_height="40dp"
    android:id="@+id/textView"
    android:hint="result"

    tools:layout_constraintRight_creator="1"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintBottom_toTopOf="@+id/btnDiv"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginBottom="30dp"
    app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>

