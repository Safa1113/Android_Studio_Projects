<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.safofoh.tawahodproject.Main8Activity"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:src="@drawable/ramz"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="245dp"
        android:layout_height="39dp"
        android:background="#EFF69C"
        android:text="كيف سيتم التعرف على وه طفلك"
        android:layout_marginBottom="50dp" />









    <TextView
        android:id="@+id/textView1"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:text="اولا ستفتح الكاميرا, ثم اتبع الخطوات القادمة التي ستظهر لك"

        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"/>


    <Button
        android:layout_width="127dp"
        android:layout_height="55dp"
        android:background="#6638e2"
        android:text="التالي"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp" />



</LinearLayout>