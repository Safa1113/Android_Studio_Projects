<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mid_night">




    <include layout="@layout/top_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_weight="0.78">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >

            <EditText
                android:id="@+id/write_txt"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:background="@color/pearl"
                android:hint="Express yourself"
                android:layout_marginTop="10dip"
                android:padding="10dp"
                android:singleLine="false"
                android:inputType="textCapWords"
                android:textColor="@color/blue_grey"
                android:textColorHint="@color/blue_grey" />

            <EditText
                android:id="@+id/write_mentioned"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/pearl"
                android:hint="Mention user"
                android:layout_marginTop="10dip"
                android:padding="10dp"
                android:singleLine="false"
                android:inputType="textCapWords"
                android:textColor="@color/blue_grey"
                android:textColorHint="@color/blue_grey" />

            <Button
                android:id="@+id/writeAction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/khaki_rose"
                android:text="Signal"
                android:textAllCaps="false"
                android:textColor="@color/fire_brick"
                android:textSize="15dp" />









        </LinearLayout>

        <include layout="@layout/bottom_layout" />


    </LinearLayout>








</LinearLayout>