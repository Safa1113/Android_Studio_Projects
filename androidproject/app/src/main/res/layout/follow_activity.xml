<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/mid_night"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/s_q"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/mid_night"


            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/platinum"
            android:textColorHint="@color/platinum" />

        <EditText
            android:id="@+id/s_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/pearl"


            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/blue_grey"
            android:textColorHint="@color/blue_grey" />

        <!-- Login Button -->

        <Button
            android:id="@+id/FOLLOW"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@color/khaki_rose"
            android:text="follow"
            android:onClick="followuser"
            android:textColor="@color/fire_brick" />

        <!-- Link to Login Screen -->

        <Button
            android:id="@+id/btnLinkToProfileScreen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:background="@null"
            android:text="go back to profile"
            android:onClick="gotoprofile"
            android:textAllCaps="false"
            android:textColor="@color/fire_brick"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>
